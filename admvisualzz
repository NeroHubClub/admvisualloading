-- Services
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

-- Config: Duration ng loading sa seconds
local loadingDuration = 300 -- palitan depende sa gusto mo

-- Loading messages (animated)
local loadingMessages = {
    "Loading assets...",
    "Downloading pets...",
    "Downloading resources...",
    "Preparing environment..."
}

-- GUI Setup
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "LoadingScreen"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- Main Frame
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.fromOffset(550, 200)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.BorderSizePixel = 0
MainFrame.Parent = ScreenGui
local UICorner = Instance.new("UICorner", MainFrame)
UICorner.CornerRadius = UDim.new(0, 15)

-- Icon Circle
local IconFrame = Instance.new("ImageLabel")
IconFrame.Size = UDim2.fromOffset(100, 100)
IconFrame.Position = UDim2.new(0, 20, 0.5, -50)
IconFrame.BackgroundTransparency = 1
IconFrame.Image = "rbxassetid://110296105636084"
IconFrame.Parent = MainFrame
local IconCorner = Instance.new("UICorner", IconFrame)
IconCorner.CornerRadius = UDim.new(0, 50)

-- Title
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(0, 400, 0, 50)
Title.Position = UDim2.new(0, 140, 0, 30)
Title.BackgroundTransparency = 1
Title.Text = "NERO SCRIPT ADOPT ME"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 30
Title.TextXAlignment = Enum.TextXAlignment.Left
Title.Parent = MainFrame

-- Loading Text (animated)
local LoadingText = Instance.new("TextLabel")
LoadingText.Size = UDim2.new(0, 380, 0, 30)
LoadingText.Position = UDim2.new(0, 140, 0, 80)
LoadingText.BackgroundTransparency = 1
LoadingText.TextColor3 = Color3.fromRGB(255, 255, 255)
LoadingText.Font = Enum.Font.Gotham
LoadingText.TextSize = 20
LoadingText.TextXAlignment = Enum.TextXAlignment.Left
LoadingText.Text = loadingMessages[1]
LoadingText.Parent = MainFrame

-- Progress Bar Background
local ProgressBG = Instance.new("Frame")
ProgressBG.Size = UDim2.fromOffset(380, 20)
ProgressBG.Position = UDim2.new(0, 140, 0, 120)
ProgressBG.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
ProgressBG.BorderSizePixel = 0
ProgressBG.Parent = MainFrame
local ProgressBGCorner = Instance.new("UICorner", ProgressBG)
ProgressBGCorner.CornerRadius = UDim.new(0, 10)

-- Progress Bar
local ProgressBar = Instance.new("Frame")
ProgressBar.Size = UDim2.fromScale(0, 1)
ProgressBar.Position = UDim2.new(0, 0, 0, 0)
ProgressBar.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
ProgressBar.BorderSizePixel = 0
ProgressBar.Parent = ProgressBG
local ProgressCorner = Instance.new("UICorner", ProgressBar)
ProgressCorner.CornerRadius = UDim.new(0, 10)

-- Percentage Text
local PercentText = Instance.new("TextLabel")
PercentText.Size = UDim2.fromOffset(100, 20)
PercentText.Position = UDim2.new(0, 140, 0, 150)
PercentText.BackgroundTransparency = 1
PercentText.TextColor3 = Color3.fromRGB(255, 255, 255)
PercentText.Font = Enum.Font.Gotham
PercentText.TextSize = 18
PercentText.TextXAlignment = Enum.TextXAlignment.Left
PercentText.Text = "0%"
PercentText.Parent = MainFrame

-- System Info Text (new at bottom)
local SystemInfo = Instance.new("TextLabel")
SystemInfo.Size = UDim2.fromOffset(500, 20)
SystemInfo.Position = UDim2.new(0, 25, 0, 180)
SystemInfo.BackgroundTransparency = 1
SystemInfo.TextColor3 = Color3.fromRGB(200, 200, 200)
SystemInfo.Font = Enum.Font.Gotham
SystemInfo.TextSize = 16
SystemInfo.TextXAlignment = Enum.TextXAlignment.Left
SystemInfo.Text = "System Info: Some features may be unavailable on alternate accounts."
SystemInfo.Parent = MainFrame

-- Calculate increment per frame
local progress = 0
local fps = 60
local increment = 1 / (loadingDuration * fps)

-- Animated loading text
local messageIndex = 1
local messageChangeInterval = 0.7 -- seconds
local messageTimer = 0

-- Loading animation
local connection
connection = RunService.RenderStepped:Connect(function(dt)
    progress = progress + increment
    local clamped = math.clamp(progress, 0, 1)
    ProgressBar:TweenSize(UDim2.new(clamped, 0, 1, 0), "Out", "Quad", 0.05, true)
    PercentText.Text = math.floor(clamped * 100).."%"

    -- Update animated message
    messageTimer = messageTimer + dt
    if messageTimer >= messageChangeInterval then
        messageTimer = 0
        messageIndex = messageIndex + 1
        if messageIndex > #loadingMessages then
            messageIndex = 1
        end
        LoadingText.Text = loadingMessages[messageIndex]
    end

    if clamped >= 1 then
        connection:Disconnect()
        -- Kick player at 100%
        LocalPlayer:Kick("[NERO SCRIPT SECURITY]\nThis account has been flagged as an alternate account.\nAlt usage is prohibited.\nSwitch to your main account to proceed.")
    end
end)
